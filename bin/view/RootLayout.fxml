<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chotoxautinh.controller.RootController">
   <left>
      <HBox>
         <children>
            <ListView fx:id="listMenu" prefHeight="200.0" prefWidth="200.0" styleClass="menuList" />
            <VBox prefHeight="600.0" spacing="10.0" style="-fx-background-color: #4DB6AC;" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="homeBtn" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" graphicTextGap="0.0" mnemonicParsing="false" onAction="#handleHomeAction" styleClass="menuBtn" />
                  <Button fx:id="toggleMenuBtn" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" graphicTextGap="0.0" layoutX="15.0" layoutY="15.0" mnemonicParsing="false" onAction="#handleExpandAction" styleClass="menuBtn" />
                  <Button fx:id="questionBtn" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" graphicTextGap="0.0" layoutX="15.0" layoutY="35.0" mnemonicParsing="false" onAction="#handleAboutAction" styleClass="menuBtn" />
                  <Button fx:id="exitBtn" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" graphicTextGap="0.0" layoutX="15.0" layoutY="87.0" mnemonicParsing="false" onAction="#handleExitAction" styleClass="menuBtn" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </left>
</BorderPane>
