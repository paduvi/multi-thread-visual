<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.FlowPane?>


<FlowPane alignment="CENTER" columnHalignment="CENTER" orientation="VERTICAL" prefHeight="500.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="com.chotoxautinh.controller.ExampleAsynchronousController">
   <children>
      <Label text="x = ?">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <FlowPane.margin>
            <Insets bottom="20.0" />
         </FlowPane.margin>
      </Label>
      <ImageView pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/example-async.png" />
         </image>
      </ImageView>
      <Button fx:id="startBtn" defaultButton="true" mnemonicParsing="false" onAction="#start" text="Start">
         <FlowPane.margin>
            <Insets top="15.0" />
         </FlowPane.margin>
      </Button>
      <TextArea fx:id="textArea" editable="false" prefWidth="450.0" wrapText="true">
         <FlowPane.margin>
            <Insets top="15.0" />
         </FlowPane.margin>
      </TextArea>
   </children>
</FlowPane>
